{
	"open-reference-web-insert-modal": {
		"steps":
		{
			"type": "modal/WebReference",
			"options": {
				"controller": "WebReferenceModalController",
				"templateUrl": "fontoxml-references-web/ui/web-reference-modal-template.html",
				"windowClass": "modal-md"
			}
		}
	},
	"reference-web-insert-modal": {
		"initialData": {
			"modalTitle": "Insert hyperlink",
			"modalSubtitle": "Refer to a web address",

			"referenceTypeName": "web"
		},
		"steps": [
			{ "type": "transform/setWebReferenceOperationNameBasedOnSelection" },
			{ "type": "operation" }
		]
	},
	"reference-web-edit-modal": {
		"initialData": {
			"modalTitle": "Edit hyperlink",
			"modalSubtitle": "Refer to a web address",
			"modalPrimaryButtonLabel": "Save",

			"referenceTypeName": "web"
		},
		"steps": {
			"type": "modal/WebReference",
			"options": {
				"controller": "WebReferenceModalController",
				"templateUrl": "fontoxml-references-web/ui/web-reference-modal-template.html",
				"windowClass": "modal-md"
			},
			"data": {
				"contextNodeId": "{{contextNodeId}}"
			}
		}
	}
}
