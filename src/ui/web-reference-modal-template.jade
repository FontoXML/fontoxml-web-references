.insert-reference
	ui-modal-header(
		title="Insert hyperlink"
		icon="globe")

	ui-modal-body
		.modal-body__section
			.alert
				| Enter the web address for this hyperlink.

		.modal-body__section
			form.form-horizontal(novalidate, name="insertUrlReferenceForm")
				.form-group.has-feedback
					label.control-label.col-sm-2
						| Web address

					.col-sm-10
						.input-group(ng-class="{'has-success': insertUrlReferenceForm.url.$valid, 'has-warning': insertUrlReferenceForm.url.$invalid}")
							.input-group-btn
								select.protocol-options(ng-model="templateData.reference.protocol", ng-options="protocolOption for protocolOption in templateData.protocolOptions")

							input.form-control.has-feedback(
								name="url",
								type="text",
								ng-model="templateData.reference.target",
								ng-blur="onBlur()",
								ng-paste="onPaste()",
								ng-pattern="templateData.urlPattern")

							i.icon.form-control-feedback(
								ng-class="{'icon-warning': insertUrlReferenceForm.url.$invalid, 'icon-check': insertUrlReferenceForm.url.$valid && insertUrlReferenceForm.url.$dirty && templateData.reference.target != ''}")

	ui-modal-footer
		ui-button.pull-left(
			type="default",
			label="Cancel",
			ng-click="cancel()"
			)

		ui-button(
			type="primary",
			label="Insert",
			ng-click="apply()",
			ng-disabled="insertUrlReferenceForm.$invalid"
			)
